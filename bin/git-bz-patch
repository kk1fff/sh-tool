#!/usr/bin/env python

import os, sys, subprocess, shutil

if len(sys.argv) < 2:
    print "git bz-patch <version>"
    sys.exit(1)

PATCH_DIR = os.environ["HOME"] + "/w/p"

if os.path.isdir(PATCH_DIR):
    shutil.rmtree(PATCH_DIR)

print subprocess.check_output(['git', 'format-patch', '-o', PATCH_DIR,
                               '-U8', sys.argv[1]])
